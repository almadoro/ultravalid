{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noErrorTruncation": true,
    "paths": {
      "@almadoro/uv-core": ["./packages/core/src"],
      "@almadoro/uv-core/*": ["./packages/core/src/*"],
      "@almadoro/uv-refinements": ["./packages/refinements/src"],
      "@almadoro/uv-refinements/*": ["./packages/refinements/src/*"],
      "@almadoro/uv-coercions": ["./packages/coercions/src"],
      "@almadoro/uv-coercions/*": ["./packages/coercions/src/*"]
    }
  }
}
